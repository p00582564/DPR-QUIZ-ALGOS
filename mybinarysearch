
public class Test {
	public static void main(String [] args){
		String wordString = "whatisthemeaningoflife";
		char[] cArr = wordString.toCharArray();
		
		System.out.println( "the first letter e is at" + firstE(cArr) );
	}
	static int firstE(char[] arr){
		char searchVal = 'e';
		for (int i = 0; i<arr.length; i++){
			if( arr[i] == searchVal )
			return i+1;
			
		}
		return -1;
	}
}
